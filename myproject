#  /etc/nginx/sites-enabled/myproject
server {
    listen 80;
    server_name www.bgie.nl;  # or your hostname

    # static files you mentioned (optional; adjust paths)
    location /static/ {
        alias /var/www/html/static/;
    }

    # Your Flask endpoints
    location ~ ^/(explorer|strongs|gematria|english)$ {
        include uwsgi_params;
        uwsgi_pass unix:/run/myproject/myproject.sock;
    }

    # (optional) a simple health check
    location = /_health {
        return 200 'ok';
        add_header Content-Type text/plain;
    }
}
